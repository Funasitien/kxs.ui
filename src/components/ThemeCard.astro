---
const { name = "light", value = "light" } = Astro.props;
---

<button
  class="bg-base-100 text-base-content w-full cursor-pointer font-sans rounded-lg"
  data-theme={value}
  data-set-theme={value}>
  <div class="grid grid-cols-5 grid-rows-4">
    <div class="bg-base-200 col-start-1 row-span-2 row-start-1 rounded-tl-lg">
    </div>
    <div class="bg-base-300 col-start-1 row-span-2 row-start-3 rounded-bl-lg">
    </div>
    <div
      class="bg-base-100 col-span-4 col-start-2 row-span-4 row-start-1 flex flex-col gap-1 p-2 rounded-r-lg">
      <div class="font-bold text-start">{name}</div>
      <div class="flex flex-wrap gap-1">
        <div
          class="bg-primary flex aspect-square w-5 items-center justify-center rounded lg:w-6">
          <div class="text-primary-content text-sm font-bold">A</div>
        </div>
        <div
          class="bg-secondary flex aspect-square w-5 items-center justify-center rounded lg:w-6">
          <div class="text-secondary-content text-sm font-bold">A</div>
        </div>
        <div
          class="bg-accent flex aspect-square w-5 items-center justify-center rounded lg:w-6">
          <div class="text-accent-content text-sm font-bold">A</div>
        </div>
        <div
          class="bg-neutral flex aspect-square w-5 items-center justify-center rounded lg:w-6">
          <div class="text-neutral-content text-sm font-bold">A</div>
        </div>
      </div>
    </div>
  </div>
</button>
