---
import { Icon } from "astro-icon/components";
import ThemeCard from "./ThemeCard.astro";
---

<div class="navbar bg-base-300 z-20 fixed top-0">
  <div class="navbar-start">
    <label
      for="my-drawer-2"
      class="btn btn-primary drawer-button px-2 lg:hidden">
      <Icon name="mdi:book-open-blank-variant" class="text-3xl" />
    </label>
  </div>
  <div class="navbar-center">
    <a
      class="btn bg-transparent hover:bg-transparent hover:text-primary border-0 shadow-none text-xl font-extrabold hover:font-black transition-all hover:translate-y-2 hover:scale-110 font-serif"
      href="/">
      <svg
        class="h-7 w-7"
        version="1.1"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 32 32">
        <rect
          x="4"
          y="4"
          height="24"
          width="24"
          rx="1"
          ry="1"
          style="stroke:oklch(var(--bc)); fill: none; stroke-width: 2;"></rect>
        <path
          d="M5.5,0l0,3 M9,0l0,3 M12.5,0l0,3 M16,0l0,3 M19.5,0l0,3 M23,0l0,3 M26.5,0l0,3
            M5.5,29l0,3 M9,29l0,3 M12.5,29l0,3 M16,29l0,3 M19.5,29l0,3 M23,29l0,3 M26.5,29l0,3
            M0,5.5l3,0 M0,9l3,0 M0,12.5l3,0 M0,16l3,0 M0,19.5l3,0 M0,23l3,0 M0,26.5l3,0
            M29,5.5l3,0 M29,9l3,0 M29,12.5l3,0 M29,16l3,0 M29,19.5l3,0 M29,23l3,0 M29,26.5l3,0"
          style="stroke:oklch(var(--bc)); fill: none; stroke-width: 1;"></path>
        <path
          d="M4,19.5 L9,19.5 l0,3.5 l3.5,0 L12.5,29
            M4,9 L9,9 L9,12.75
            M16,4 L16,9 L29,9
            M12.5,4 L12.5,10.75 L16,14.25 L16,16
            M29,12.5 L21.25,12.5 L21.25,16 L23,17.75 L23,19.5 L20.5,22"
          style="stroke:oklch(var(--bc)); fill: none; stroke-width: 0.75; stroke-linejoin: round;"
        ></path>
        <circle
          cx="9"
          cy="14.25"
          r="1.5"
          style="stroke:oklch(var(--bc)); fill: none; stroke-width: 0.75;"
        ></circle>
        <circle
          cx="16"
          cy="17.75"
          r="1.5"
          style="stroke:oklch(var(--bc)); fill: none; stroke-width: 0.75;"
        ></circle>
        <circle
          cx="19.5"
          cy="23"
          r="1.5"
          style="stroke:oklch(var(--bc)); fill: none; stroke-width: 0.75;"
        ></circle>
        <circle
          cx="0"
          cy="0"
          r="1"
          style="stroke:oklch(var(--p)); fill:oklch(var(--p)); stroke-width: 0.25;">
          <animateMotion
            path="M12.5,0 L12.5,10.75 L16,14.25 L16,17.75 M19.5,23 L23,19.5 L23,17.75 L21.25,16 L21.25,12.5 L32,12.5 M32,9 L16,9 L16,0 M12.5,32 L12,23 l-3.5,0 l0,-3.5 L0,19.5 M0,9 L9,9 L9,14.25"
            begin="0s"
            dur="4s"
            repeatCount="indefinite"></animateMotion>
        </circle>
      </svg>
      KXS.FR
    </a>
  </div>
  <div class="navbar-end">
    <button
      class="btn btn-primary lg:hidden px-2"
      onclick="my_modal_1.showModal()"
      ><Icon name="mdi:palette" class="text-3xl" /></button
    >
    <div class="mr-1 hidden lg:block">
      <a class="link link-hover" href="/cours">Cours</a>
      <span class="mx-2">|</span>
      <a class="link link-hover" href="/sujets">Sujets</a>
      <span class="mx-2">|</span>
      <a class="link link-hover" href="/fiches">Fiches</a>
      <span class="mx-2">|</span>
      <a class="link link-hover" href="/outils">Outils</a>
    </div>
  </div>
</div>
<dialog id="my_modal_1" class="modal bg-primary-content">
  <div class="modal-box bg-transparent shadow-none w-11/12">
    <form method="dialog" class="grid grid-cols-2 gap-6">
      <!-- if there is a button in form, it will close the modal -->
      <ThemeCard name="☀️ Light" value="light" />
      <ThemeCard name="🌚 Dark" value="sunset" />
      <ThemeCard name="🕰️ Nostalgic" value="kxs" />
      <ThemeCard name="⛅️ DreamCloud" value="nord" />
      <ThemeCard name="💚 Soon" value="sunset" />
      <ThemeCard name="🌵 Cactus" value="cactus" />
    </form>
  </div>
</dialog>
